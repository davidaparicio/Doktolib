# AWS Configuration
aws_region = "us-east-1"

# Lambda Configuration
function_name  = "doktolib-visio-health"
environment    = "production"

# Lambda Performance
lambda_timeout = 10   # seconds
lambda_memory  = 128  # MB (minimum, adequate for this simple service)

# Logging
log_retention_days = 7  # CloudWatch logs retention

# CORS Configuration
# Allow all origins by default, restrict in production if needed
cors_allow_origins = ["*"]
# For production, restrict to your frontend domains:
# cors_allow_origins = [
#   "https://app.doktolib.com",
#   "https://doktolib.com",
#   "http://localhost:3000"
# ]

# Monitoring
error_threshold = 10  # Number of errors before triggering CloudWatch alarm

# Tags
tags = {
  Project     = "Doktolib"
  Service     = "Visio-Conference"
  Environment = "Production"
  ManagedBy   = "Terraform"
  Component   = "Health-Check"
}


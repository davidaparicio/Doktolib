# Cloudflare API Token
# Create at: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Zone:Edit, Zone Settings:Edit
cloudflare_api_token = "your-cloudflare-api-token-here"

# Domain Configuration
domain_name        = "doktolib.com"        # Your root domain
frontend_subdomain = "app"                 # Subdomain for frontend (app.doktolib.com)
# Use "@" for root domain: frontend_subdomain = "@"

# Origin Configuration
# This is the URL where your frontend is actually hosted (e.g., from Qovery)
origin_url = "doktolib-frontend-xxxxx.qovery.io"

# Optional Features
create_www_redirect  = false  # Create www.app.doktolib.com redirect
create_admin_bypass  = false  # Bypass cache for /admin/* paths
create_api_bypass    = true   # Bypass cache for /api/* paths (recommended)
create_health_check  = true   # Enable Cloudflare health monitoring

# Security & Performance
rate_limit_requests_per_5min = 100    # Max requests per IP per 5 minutes
security_level               = "medium" # off, low, medium, high, under_attack

# Deployment
enable_cache_purge_on_deploy = false  # Purge cache when running terraform apply

# Tags
tags = {
  Project    = "Doktolib"
  Component  = "Frontend-CDN"
  Environment = "Production"
  ManagedBy  = "Terraform"
}


# Doktolib Environment Configuration

# Frontend Configuration
# URL for frontend to connect to backend API
# For local development: http://localhost:8080
# For Docker: http://backend:8080  
# For production: https://your-backend-api.domain.com
NEXT_PUBLIC_API_URL=http://localhost:8080

# Backend Configuration  
# Database connection string
DATABASE_URL=postgres://doktolib:password123@localhost:5432/doktolib

# SSL mode for database connection (disable/require/verify-ca/verify-full)
DB_SSL_MODE=disable

# Backend server port
PORT=8080

# Gin mode (debug/release)
GIN_MODE=debug

# PostgreSQL Configuration
POSTGRES_DB=doktolib
POSTGRES_USER=doktolib
POSTGRES_PASSWORD=password123

# Seed Data Configuration
DOCTOR_COUNT=1500
FORCE_SEED=false